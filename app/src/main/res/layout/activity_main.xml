<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainpage"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_rules"
        android:layout_width="220dp"
        android:layout_height="62dp"
        android:onClick="ReadRules"
        android:text="Правила"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:backgroundTint="@color/pink"
        android:textColor="@color/yellow"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/btn_play"
        android:layout_width="220dp"
        android:layout_height="62dp"
        android:layout_marginTop="68dp"
        android:onClick="Play"
        android:text="Играть"
        android:backgroundTint="@color/pink"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="@+id/btn_rules"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_rules"
        app:layout_constraintTop_toTopOf="@+id/btn_rules"
        tools:ignore="OnClick" />
</androidx.constraintlayout.widget.ConstraintLayout>